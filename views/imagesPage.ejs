<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Movie Dashboard</title>
    <style>
      
    </style>
</head>

<body>
	<h1>Add movies to display</h1>
	<hr>
	<div>
		<form action="/" method="POST" id="update_movie" enctype="multipart/form-data">
			<div>
				<label for="name">Movie name</label>
				<input type="text" id="name" placeholder="Movie Name"
					value="" name="name" required>
			</div>
			<div>
				<label for="catog">Catogory</label>
				<input type="text" id="catog" placeholder="Enter Catogory"
					value="" name="catog" required>
			</div>
			<div>
				<label for="rating">Rating</label>
				<input type="number" id="rating" placeholder="enter rating"
					value="" name="rating" required>
			</div>
			<div>
				<label for="votes">votes</label>
				<input type="number" id="votes" placeholder="enter votes"
					value="" name="votes" required>
			</div>
			<div>
				<label for="rdate">Relase date</label>
				<input type="date" id="rdate" placeholder="release date"
					value="" name="rdate" required>
			</div>
			<div>
				<label for="desc">Image Description</label>
				<textarea id="desc" name="desc" value=""
						placeholder="Description" required>
				</textarea>
			</div>
			<div>
				<label for="image">Upload Image</label>
				<input type="file" id="image"
					name="image" value="" required>
			</div>
			<div>
				<button type="submit">Submit</button>
			</div>
		</form>
	</div>

	<hr>

	<h1>Uploaded Movies</h1>
	<div>
        <table>
            <tr>
                <th>Name</th>
                <th>Catogory</th>
                <th>release-date</th>
                <th>rating</th>
                <th>votes</th>
                <th>Description</th>
                <th>Image</th>
                <th>Update</th>
                <th>delete</th>
            </tr>
		<% items.forEach(function(image) { %>
		<div>
           
                <tr>
                    <td><%= image.name %></td>
                    <td><%= image.catog %></td>
                    <td><%= image.rdate %></td>
                    <td><%= image.rating %></td>
                    <td><%= image.votes %></td>
                    <td><%= image.desc %></td>
                    <td><img style="width: 50px;" src="data:image/<%=image.img.contentType%>;base64,
                        <%=image.img.data.toString('base64')%>"></td>
                    <td><button>update</button></td>
                    <td>
						<a href="../delete/<%= image._id%>">delete</a>
					</td>
                    
                   
                   
                    
                    
                  </tr>
            </table>
			<div>
				



				</div>
			</div>
		</div>
		<% }) %>
	</div>
</body>

</html>
